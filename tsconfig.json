{
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"ES2020",
		],
		"esModuleInterop": true,
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "react-jsx",
		"declaration": true,
		"outDir": "./lib"
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules",
		"coverage",
		"lib",
		"**/*.stories.*",
		"**/*.test.*"
	]
}
